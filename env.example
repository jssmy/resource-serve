# Database Configuration (MySQL)
DB_HOST = localhost
DB_PORT = 3306
DB_USER = your_db_user
DB_PASSWORD = your_db_password
DB_NAME = your_database_name

# JWT Configuration
JWT_TOKEN_SECRET = your_jwt_secret_key_here
JWT_TOKEN_EXPIRE = 15m
JWT_REFRESH_TOKEN_SECRET = your_refresh_token_secret_key_here
JWT_REFRESH_TOKEN_EXPIRE = 7d

# Mail Configuration (SMTP)
MAIL_HOST = smtp.example.com
MAIL_PORT = 465
MAIL_USERNAME = your_email@example.com
MAIL_PASSWORD = your_email_password

# Mail Expiration Times (in hours)
MAIL_CONFIRM_EXPIRES_IN = 24
MAIL_RESET_PASSWORD_EXPIRES_IN = 24